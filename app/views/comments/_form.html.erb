<%= form_for [post, Comment.new] do |f| %>
   <% if policy(Comment).create? %>
      <div class="form-group">
         <%= f.label :body %>
         <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment" %>
      </div>
      <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
   <% end %>
 <% end %>