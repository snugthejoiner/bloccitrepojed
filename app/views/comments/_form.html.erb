<%= form_for [topic, post, Comment.new] do |f| %>

   <div class="form-group">
     <%= f.label :Comment %>
     <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment" %>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success' %>
   </div>
 <% end %>