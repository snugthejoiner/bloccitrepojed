<h1><%= markdown_to_html @post.markdown_title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= markdown_to_html @post.markdown_body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit Post", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>

      <%= link_to "Create Summary", new_topic_post_summary_path(@topic, @post), class: 'btn btn-success' %>
    <% end %>
  </div>

</div>